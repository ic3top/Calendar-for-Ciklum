{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "airbnb-base/legacy",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "ignorePatterns": ["webpack.config.js"],
    "rules": {
        "linebreak-style": ["error", "windows"],
        "no-loop-func": "error",
        "brace-style": ["error", "1tbs", { "allowSingleLine": true }],
        "no-param-reassign": ["error", { "props": true, "ignorePropertyModificationsFor": ["meetings"] }]
    }
}

